<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Divesiteinfo"
    android:background="@color/black">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_weight="10"
            android:id="@+id/kotak1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/logoatas" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:id="@+id/kotak2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gambardivesite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/kotak3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/kotak2">

                    <LinearLayout
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:id="@+id/textlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textinfo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Label"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:justificationMode="inter_word" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:layout_below="@id/textlayout"
                        android:id="@+id/textlayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/diveinfo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Label"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:justificationMode="inter_word" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:layout_below="@id/textlayout1"
                        android:id="@+id/textlayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/deskripsi"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Deskripsi"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:justificationMode="inter_word" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="30dp"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <LinearLayout
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/text1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@drawable/icon_home" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/text2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@drawable/icon_dive" />
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="left"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/text3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@drawable/icon_maps" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>