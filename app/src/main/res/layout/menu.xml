<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logoutama"
        android:paddingVertical="12dp"
        android:contentDescription="@string/app_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/text3"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        app:cardCornerRadius="23dp"
                        app:cardBackgroundColor="@color/grey"
                        android:layout_marginRight="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:text="Cari Tempat Kumpul"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:textSize="20sp"
                                android:paddingVertical="5dp"
                                android:fontFamily="@font/montserrat_light"/>

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="right"
                                android:paddingBottom="30dp"
                                app:srcCompat="@drawable/hangoutin"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_weight="0.75"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        app:cardCornerRadius="23dp"
                        app:cardBackgroundColor="@color/grey">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:text="Partner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:textSize="20sp"
                                android:paddingVertical="5dp"
                                android:fontFamily="@font/montserrat_light"/>

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="right"
                                android:paddingBottom="30dp"
                                app:srcCompat="@drawable/partner"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="23dp"
                    app:cardBackgroundColor="@color/grey"
                    android:layout_marginVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:text="Hot Promo!"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:textSize="20sp"
                            android:paddingVertical="5dp"
                            android:fontFamily="@font/montserrat_light"/>

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="8dp"
                            app:srcCompat="@drawable/hotpromo"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                ><androidx.cardview.widget.CardView
                android:id="@+id/text4"
                android:layout_weight="0.45"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                app:cardCornerRadius="23dp"
                app:cardBackgroundColor="@color/grey"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:text="Kategori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:paddingVertical="5dp"
                        android:fontFamily="@font/montserrat_light"/>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="right"
                        android:paddingBottom="30dp"
                        app:srcCompat="@drawable/kategori"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/logo"
                    android:layout_weight="0.25"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    app:cardCornerRadius="23dp"
                    app:cardBackgroundColor="@color/grey">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:text="Protokol Kesehatan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:textSize="20sp"
                            android:paddingVertical="5dp"
                            android:fontFamily="@font/montserrat_light"/>

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="right"
                            android:paddingBottom="30dp"
                            app:srcCompat="@drawable/prokes"/>


                    </LinearLayout>
                </androidx.cardview.widget.CardView></LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
