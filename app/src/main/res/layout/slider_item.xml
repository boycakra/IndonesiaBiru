<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="10dp"
    android:layout_margin="1dp"
    android:elevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
