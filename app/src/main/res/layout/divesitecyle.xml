<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="15dp"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    android:elevation="90dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2E324B"
        android:orientation="vertical"
        android:elevation="90dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/mainpic">
        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/divisite_shadow">
        </ImageView>

        <TextView
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="35dp"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Label"
            android:id="@+id/tempatlbl"
            android:textColor="@color/white" />

        <TextView
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nama tempat"
            android:id="@+id/tempatsite"
            android:textColor="@color/white">
        </TextView>

        <TextView
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:text="Penjelasan"
            android:id="@+id/deskripsidivesite"
            android:textColor="@color/white">
        </TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/mainpic"
            android:id="@+id/pin">
        </ImageView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>